<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".views.MainActivity">

    <TextView
        android:id="@+id/accedi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/oswald"
        android:gravity="center"
        android:text="ACCEDI"
        android:textColor="@color/blu_cinefacts"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername"
        android:fontFamily="@font/oswald"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black_cinefacts"
        android:textColorHint="@color/grey_cinefacts"
        android:layout_below="@id/accedi"
        android:hint="Username"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:fontFamily="@font/oswald"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black_cinefacts"
        android:textColorHint="@color/grey_cinefacts"
        android:layout_below="@id/editTextUsername"
        android:hint="Password"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="20dp"
        android:password="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crea_account"
        android:layout_below="@+id/editTextPassword"
        android:text="Non hai un account? Registrati!"
        android:fontFamily="@font/oswald"
        android:textColor="@color/white_cinefacts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/crea_account"
        android:text="ACCEDI"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black_cinefacts"
        android:backgroundTint="@color/blu_cinefacts"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>