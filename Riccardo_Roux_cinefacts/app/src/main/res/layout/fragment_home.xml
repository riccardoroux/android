<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_cinefacts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/copertina">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="413dp"
                        android:layout_height="256dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/dicaprio" />
                    <ImageView
                        android:layout_width="413dp"
                        android:layout_height="256dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/genv" />
                    <ImageView
                        android:layout_width="413dp"
                        android:layout_height="256dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/prisoners" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NEWS"
                android:fontFamily="@font/oswald"
                android:textColor="@color/blu_cinefacts"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/ravenna"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="RAVENNA NIGHTMARE FILM FEST - AL VIA LA XXI EDIZIONE"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/mostro"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="MOSTRO DI FIRENZE: AL VIA LE RIPRESE DELLA SERIE TV NETFLIX DIRETTA DA STEFANO SOLLIMA"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/corto"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="CORTO E FIENO - I PREMI DELLA XIV EDIZIONE DEL RURAL FILM FESTIVAL"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ARTICOLI"
                android:fontFamily="@font/oswald"
                android:textColor="@color/blu_cinefacts"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/dicaprioart"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="TRE FILM DI CUI FORSE LEONARDO DICAPRIO NON È ORGOGLIOSO"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/genvart"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="GEN V - RECENSIONE: QUANDO LO SPIN-OFF FUNZIONA BENE"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/prisonersart"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="10 ANNI DI PRISONERS, L'INTRICATO LABIRINTO DI VILLENEUVE"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TOP 8"
                android:fontFamily="@font/oswald"
                android:textColor="@color/blu_cinefacts"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/citta"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="8 FILM DOVE LA CITTÀ È REALMENTE PROTAGONISTA"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/inizio"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="8 FILM DA VEDERE SE NON SAI COME AFFRONTARE UN INIZIO"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="200dp"
                            android:layout_height="124dp"
                            android:src="@drawable/autunno"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="8 FILM DOVE L'AUTUNNO RUBA LA SCENA E DIVENTA PROTAGONISTA"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/white_cinefacts"
                            android:textSize="17dp"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>